	"type": "object",
	"required": ["authoritative", "root", "runtimePath", "allowlist"],
	"properties": {
		"authoritative": { "type": "string", "enum": ["design", "runtime"] },
		"root": { "type": "string" },
		"runtimePath": { "type": "string" },
		"allowlist": {
			"type": "array",
			"items": { "type": "string" }
		}
	},
	"additionalProperties": false
}
