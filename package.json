{
  "name": "ofcx/mono-toolkit",
  "version": "0.1.0",
  "description": "Deterministic Docker-first monorepo toolkit",
  "private": true,
  "license": "MIT",
  "type": "commonjs",
  "bin": {
    "mono-toolkit": "dist/cli.js"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "config/defaults",
    "config/tools",
    "schemas",
    "templates",
    "docs"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "biome check ."
  },
  "engines": {
    "node": ">=24"
  },
  "packageManager": "pnpm@10.4.0",
  "dependencies": {
    "@stricli/core": "^1.2.5",
    "ajv": "^8.17.1",
    "ajv-formats": "^2.1.1",
    "yaml": "^2.6.1"
  },
  "devDependencies": {
    "@types/node": "^24.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "tsup": "^8.4.0",
    "typescript": "^5.8.2",
    "vitepress": "^1.6.4",
    "vitest": "^3.0.9"
  }
}
